# More info on this config https://editorconfig.org
root = true

# Applies to all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# JSON and YAML
[*.{json,yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# HTML and CSS
[*.{html,css,scss}]
indent_size = 2